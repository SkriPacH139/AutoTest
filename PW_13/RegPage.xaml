<Page x:Class="PW_13.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PW_13"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="500"
      Title="Регистрация">
    <Grid>
        <StackPanel>
            <TextBlock Text="Фамилия" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <TextBox x:Name="TextBoxSurname" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Margin="0,5,0,0" />

            <TextBlock Text="Имя" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <TextBox x:Name="TextBoxName" HorizontalAlignment="Center"  Width="300" Margin="0,5,0,0"/>

            <TextBlock Text="Отчество" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <TextBox x:Name="TextBoxPatronymic" HorizontalAlignment="Center"  Width="300" Margin="0,5,0,0"/>

            <TextBlock Text="Логин" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <TextBox x:Name="TextBoxLogin" HorizontalAlignment="Center"  Width="300" Margin="0,5,0,0"/>

            <TextBlock Text="Пароль" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Center"  Width="300" Margin="0,5,0,0"/>

            <TextBlock Text="Подтверждение пароля" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <PasswordBox x:Name="PasswordBoxConfirm" HorizontalAlignment="Center"  Width="300" Margin="0,5,0,0"/>

            <TextBlock x:Name="MessageTextBlock" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Center"  Width="450" Margin="0,5,0,0" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Регистрация" Click="RegisterButton_Click" Margin="10" />
                <Button Content="Отмена" Click="CancelButton_Click" Margin="10" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
